  <div class="main">
    <h1>Nomina mensual de cobros</h1>
    <div class="edic_table">
      <a class="orden" href="/admin/consultas/nomina_mensual/orderById">Ordenar por id</a>
      <a class="orden" href="/admin/consultas/nomina_mensual/orderByApellido">Ordenar
        por apellido</a>

              <form class="filter" method="post" action="/admin/consultas/nomina_mensual/filter">
      <div>
        <label>ID:</label>
        <select name="id">
          <option value="">ID</option>
          {{#each detallesFormatID}}
            <option value={{this}} >{{this}}</option>
          {{/each}}
        </select>
        </div>

        <div>
        <label value="">Apellido:</label>
        <select name="apellido">
          <option value="">APELLIDO</option>
          {{#each detallesFormatAP}}
            <option value={{this}}>{{this}}</option>
          {{/each}}
        </select>
        </div>

        <div>
        <label>Nombre:</label>
        <select name="nombre">
          <option value="" >NOMBRE</option>
          {{#each detallesFormatNom}}
            <option value={{this}} >{{this}}</option>
          {{/each}}
        </select>
        </div>
        <div>
        <label>DNI</label>
        <select name="dni">   
          <option value="">DNI</option>
          {{#each detallesFormatDni}}
            <option value={{this}}>{{this}}</option>
          {{/each}}
        </select>
        </div>
        <button type="submit" class="buscar">Buscar</button>
      </form>

      <table>
        <thead>
          <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>DNI</td>
            <td>Enero</td>
            <td>Febrero</td>
            <td>Marzo</td>
            <td>Abril</td>
            <td>Mayo</td>
            <td>Junio</td>
            <td>Julio</td>
            <td>Agosto</td>
            <td>Septiembre</td>
            <td>Octubre</td>
            <td>Noviembre</td>
            <td>Diciembre</td>
          </tr>
        </thead>

        <tbody>
          {{#each empleadoMen}}
          <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{dni}}</td>
            <td>${{enero}}</td>
            <td>${{febrero}}</td>
            <td>${{marzo}}</td>
            <td>${{abril}}</td>
            <td>${{mayo}}</td>
            <td>${{junio}}</td>
            <td>${{julio}}</td>
            <td>${{agosto}}</td>
            <td>${{septiembre}}</td>
            <td>${{octubre}}</td>
            <td>${{noviembre}}</td>
            <td>${{diciembre}}</td>
          </tr>
          {{/each}}
        </tbody>

      </table>
